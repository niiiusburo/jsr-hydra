# JSR Hydra Trading System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE & CACHE CONFIGURATION
# ============================================================================

# PostgreSQL connection string for main database
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@jsr-postgres:5432/jsr_hydra

# Redis connection string for caching and real-time data
# Format: redis://host:port/database_number
REDIS_URL=redis://jsr-redis:6379/0

# ============================================================================
# MT5 BROKER CONFIGURATION
# ============================================================================

# Hostname or IP address of MT5 server
MT5_HOST=jsr-mt5

# RPC port for MT5 communication
MT5_RPYC_PORT=18812

# MT5 account login number
MT5_LOGIN=0

# MT5 account password
MT5_PASSWORD=

# MT5 broker server name (e.g., "ICMarkets-Demo")
MT5_SERVER=

# ============================================================================
# TELEGRAM NOTIFICATIONS
# ============================================================================

# Telegram bot token for sending alerts and updates
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Telegram chat ID for receiving notifications
# Get this from @userinfobot or similar on Telegram
TELEGRAM_CHAT_ID=

# ============================================================================
# RISK MANAGEMENT SETTINGS
# ============================================================================

# Maximum allowed drawdown percentage before kill switch triggers (default: 15%)
MAX_DRAWDOWN_PCT=15.0

# Daily loss limit percentage before stopping trading (default: 5%)
DAILY_LOSS_LIMIT_PCT=5.0

# Risk per individual trade as percentage of account (default: 1%)
RISK_PER_TRADE_PCT=1.0

# ============================================================================
# SYSTEM SETTINGS
# ============================================================================

# Enable dry-run mode (no real trades executed, simulation only)
# Set to False for live trading
DRY_RUN=True

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# JWT secret key for authentication tokens
# CHANGE THIS in production!
JWT_SECRET=change-me-in-production

# API key for external integrations
# CHANGE THIS in production!
API_KEY=change-me-in-production

# ============================================================================
# ADMIN CREDENTIALS
# ============================================================================

# Default admin username for access control
ADMIN_USERNAME=admin

# Default admin password for access control
# CHANGE THIS in production!
ADMIN_PASSWORD=admin
